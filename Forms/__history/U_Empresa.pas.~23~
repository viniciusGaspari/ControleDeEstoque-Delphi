  Vcl.Buttons, Vcl.DBCtrls, Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.Mask;

type
  TFrm_empresa = class(TFrm_padrao)
    Q_padraoid_empresa: TAutoIncField;
    Q_padraorazao_social: TStringField;
    Q_padraon_fantasia: TStringField;
    Q_padraoendereco: TStringField;
    Q_padraonumero: TIntegerField;
    Q_padraobairro: TStringField;
    Q_padraocep: TStringField;
    Q_padraocidade: TStringField;
    Q_padraouf: TStringField;
    Q_padraotelefone: TStringField;
    Q_padraocnpj: TStringField;
    Q_padraoemail: TStringField;
    Q_padraologo: TBlobField;
    Q_padraocadastro: TWideStringField;
    Label1: TLabel;
    DBEdit1: TDBEdit;
    Label2: TLabel;
    DBEdit2: TDBEdit;
    Label3: TLabel;
    DBEdit3: TDBEdit;
    Label4: TLabel;
    DBEdit4: TDBEdit;
    Label5: TLabel;
    t: TDBEdit;
    Label6: TLabel;
    DBEdit6: TDBEdit;
    Label7: TLabel;
    DBEdit7: TDBEdit;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    DBEdit10: TDBEdit;
    Label11: TLabel;
    DB_cnpj: TDBEdit;
    Label12: TLabel;
    DBEdit12: TDBEdit;
    DBImage1: TDBImage;
    Label14: TLabel;
    DB_cadastro: TDBEdit;
    DBEdit8: TDBEdit;
    openDialog: TOpenDialog;
    procedure bt_novoClick(Sender: TObject);
    procedure DBImage1Click(Sender: TObject);
    procedure FormShow(Sender: TObject);
