  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_empresa: TFrm_empresa;

implementation

{$R *.dfm}

procedure TFrm_empresa.bt_EditarClick(Sender: TObject);
begin
  inherited;
    DBImage1.Picture.LoadFromFile(openDialog.FileName);
end;

procedure TFrm_empresa.bt_novoClick(Sender: TObject);
begin
  inherited;
  DB_cadastro.Text := datetostr(now);
  DB_cnpj.SetFocus;
  DBImage1.Enabled := true;
end;

procedure TFrm_empresa.DBImage1Click(Sender: TObject);
begin
  inherited;

  Q_padrao.Edit;
  openDialog.Execute;
  DBImage1.Picture.LoadFromFile(openDialog.FileName);
  Q_padrao.Refresh;
  MessageDlg('Imagem inserida com sucesso!', mtInformation,[mbOk],0);

end;

procedure TFrm_empresa.FormShow(Sender: TObject);
begin
  inherited;
  DBImage1.Picture.LoadFromFile('C:\Users\vinic\Desktop\Curso Delphi Para Iniciantes\Controle de Estoque\fotos\companydefaultphoto.jpg');
end;

end.
